div.modal.inmodal.in(role="dialog", [ngClass]="{'in': visible}", *ngIf="modal")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button", (click)="close()")
          span(aria-hidden="true") ×
          span.sr-only Close
        h4.modal-title(*ngIf="modal.title") {{ modal.title }}
      div.modal-body(*ngIf="modal.message")
        | {{ modal.message }}
      div.modal-footer
        button.btn(type="button", (click)="close()") Mégse
        button.btn(*ngFor="let button of modal.buttons", (click)="button.callback()", [ngClass]="button.classes") {{ button.text }}
div.modal-backdrop([ngClass]="{'in': visible}")
