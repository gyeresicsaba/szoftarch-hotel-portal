div.wrapper.wrapper-content.ecommerce
  div.ibox-content
    div.row.vertical-align
      div.col-xs-10
        h2
          strong {{ room.id }}.szoba
          i(*ngIf="authService.user.IsAdmin", [routerLink]="'edit'").fa.fa-pencil
          i.fa.fa-trash(*ngIf="authService.user.IsAdmin", (click)="openDeleteModal()")
    hr
    div.row
      div.col-xs-4
        h3 Férőhelyek száma:
        div {{ room.capacity }}
      div.col-xs-4
        h3 Ár:
        div {{ room.price }} Ft/éj/fő
