div.wrapper.wrapper-content.ecommerce
  div.ibox-content
    div.row.vertical-align
      div.col-xs-10.col-xl-10
        h2
          strong {{ box.box_number }}
          i([routerLink]="'edit'").fa.fa-pencil
          i.fa.fa-trash((click)="openDeleteModal()")
      div.col-xs-2.col-xl-2
        h4 Postaköltség:
          span.text-center([ngClass]="{'text-primary': box.postage, 'text-danger': !box.postage}")
            i.fa([ngClass]="{'fa-check': box.postage, 'fa-times': !box.postage}")
    hr
    div.row
      div.col-xs-4
        h3 Tenyészet azonosító
        div {{ box.partner_number }}
      div.col-xs-4
        h3 Tenyészet neve
        div {{ box.partner_name }}
    hr
    div.row-margin
      div.row
        div.col-xs-4.col-lg-4
          h3 Kiküldési dátum
          div {{ box.formattedOut }}
        div.col-xs-4
          h3 Cső ki
          div {{ box.pipe_out }}
        div.col-xs-4
          h3 Akku ki
          div {{ box.battery_out }}
      div.row
        div.col-xs-4
          h3 Beérkezési dátum
          div {{ box.formattedIn }}
        div.col-xs-4
          h3 Cső be
          div {{ box.pipe_in }}
        div.col-xs-4
          h3 Akku be
          div {{ box.battery_in }}
    hr
    div.row
      div.col-xs-offset-4.col-xs-4
        h3 Cső egyenleg
        div {{ box.pipe_diff }}
      div.col-xs-4
        h3 Akku egyenleg
        div {{ box.battery_diff }}
    hr
    div.row
      div.col-xs-5.col-lg-5
        h3 Megjegyzés
        div {{ box.comment }}
